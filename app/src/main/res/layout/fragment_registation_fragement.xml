<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistationFragement">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/RegisterEmailID"
            android:drawableLeft="@drawable/email_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_design"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"></EditText>


        <EditText
            android:visibility="gone"
            android:id="@+id/RegisterUserNameID"
            android:layout_below="@+id/RegisterEmailID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_design"
            android:hint="Enter Your FullName"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true">
        </EditText>

        <EditText
            android:id="@+id/RegusterPasswordID"
            android:layout_below="@+id/RegisterUserNameID"
            android:drawableLeft="@drawable/passwordicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_design"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true">
        </EditText>

        <EditText
            android:id="@+id/RegisterConfrimPasswordID"
            android:layout_below="@+id/RegusterPasswordID"
            android:drawableLeft="@drawable/passwordicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_design"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true">
        </EditText>


        <TextView
            android:textSize="20sp"
            android:text="OR"
            android:layout_above="@+id/LayoutID"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


        <RelativeLayout
            android:id="@+id/LayoutID"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@id/RegisterButtonID"
            android:layout_marginBottom="10dp">


            <RelativeLayout
                android:elevation="2dp"
                android:id="@+id/RFaceBookLoginID"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/facebook_buttondesign">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/facebooklogo">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:elevation="2dp"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/RFaceBookLoginID"
                android:background="@drawable/google_buttondesign">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/googleicon">

                </ImageView>

            </RelativeLayout>


        </RelativeLayout>


        <Button
            android:id="@+id/RegisterButtonID"
            android:layout_width="match_parent"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:text="SIGN UP"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            android:background="@drawable/register_buttondesign"
            android:layout_height="wrap_content">

        </Button>



    </RelativeLayout>

</FrameLayout>