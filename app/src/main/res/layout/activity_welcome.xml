<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="#F7F7F7">



    <TextView
        android:id="@+id/WelcomeTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="serif-monospace"
        android:text="W E L C O M E  T O"
        android:textColor="#3A3A3A"
        android:textSize="20dp"
        android:typeface="monospace" />


    <RelativeLayout
        android:id="@+id/layoutid"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/WelcomeTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/bagID"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:src="@drawable/appicon">
        </ImageView>

        <TextView
            android:id="@+id/EmailltextID"
            android:text="Mutty Chat"
            android:textColor="#038C73"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:typeface="sans"
            android:textAllCaps="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/bagID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/layoutid"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:textColor="#038C73"
        android:text="C H A T  N O W"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:layout_height="wrap_content">

    </TextView>


    <ProgressBar
        android:indeterminateTint="#E21B68"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
    </ProgressBar>



</RelativeLayout>